<?xml version="1.0"?>
<openerp>
    <data>

        <record id="print_voucher_wizard" model="ir.ui.view">
            <field name="name">print.voucher.wizard</field>
            <field name="model">print.voucher.wizard</field>
            <field name="inherit_id" ref="pabi_forms.print_voucher_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="inside">
                    <field name="state_sign" invisible="1"/>
                </xpath>
                <xpath expr="//footer/button[@name='action_print_voucher']" position="after">
                    <button name="action_preview_voucher" type="object" string="Preview" class="oe_highlight"/>
                    or
                    <span attrs="{'invisible': [('state_sign', '=', 'signed')]}">
                        <button name="action_sign_voucher"
                            type="object"
                            string="Sign"
                            class="oe_highlight"
                            confirm="Are you sure you want to sign this document?"/>
                    </span>
                    or
                </xpath>
            </field>
        </record>

      </data>
</openerp>
