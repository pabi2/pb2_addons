<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_pabi_web_config_settings" model="ir.ui.view">
            <field name="name">pabiweb settings</field>
            <field name="model">pabi.web.config.settings</field>
            <field name="inherit_id" ref="pabi_web_config.view_pabi_web_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <separator string="e-Tax Webservice Configuration"/>
                    <group>
                        <label for="id" string="Options"/>
                        <div name="pabi_etax_option">
                            <div>
                                <label for="pabietax_active"/>
                                <field name="pabietax_active" class="oe_inline"/>
                            </div>
                            <div attrs="{'invisible': [('pabietax_active', '=', False)]}" >
                                <br/>
                                <label for="pabietax_web_url"/>
                                <field name="pabietax_web_url" attrs="{'required': [('pabietax_active', '=', True)]}" class="oe_inline"/>
                                <p class="oe_gray">e.g., http://ehrdev.biotec.or.th:8082</p>
                                <label for="pabietax_web_url_test"/>
                                <field name="pabietax_web_url_test" class="oe_inline"/>
                                <p class="oe_gray">e.g., http://ehrdev.biotec.or.th:8082</p>
                                <br/>
                                <label for="pabietax_db"/>
                                <field name="pabietax_db" attrs="{'required': [('pabietax_active', '=', True)]}" class="oe_inline"/>
                                <br/>
                                <label for="pabietax_user"/>
                                <field name="pabietax_user" placeholder="Username" attrs="{'required': [('pabietax_active', '=', True)]}" class="oe_inline"/>
                                <field name="pabietax_password" placeholder="Password" attrs="{'required': [('pabietax_active', '=', True)]}" class="oe_inline"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
