<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="budget_plan_project_analysis_report_wizard" model="ir.ui.view">
            <field name="name">budget.plan.project.analysis.report.wizard</field>
            <field name="model">budget.plan.project.analysis.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Budget Plan Analysis">
                    <group>
                        <group>
                            <field name="fiscalyear_id"/>
                            <field name="functional_area_id"/>
                            <field name="program_group_id"/>
                            <field name="program_id"/>
                            <field name="project_group_id"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="budget_method"/>
                        </group>
                    </group>
                    <footer>
                        <button icon="gtk-execute" string="Export" name="xls_export" type="object" class="oe_highlight" context="{'xls_export':1}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_budget_plan_project_analysis_report" model="ir.actions.act_window">
            <field name="name">Budget Plan Analysis</field>
            <field name="res_model">budget.plan.project.analysis.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_budget_plan_project_analysis_report"
            name="Budget Plan Analysis"
            parent="pabi_budget_plan.menu_action_budget_plan_project"
            action="action_budget_plan_project_analysis_report"
            sequence="30"
            icon="STOCK_PRINT"
        />
    </data>
</openerp>
