<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_budget_drilldown_report_form">
            <field name="name">view.budget.drilldown.report.form</field>
            <field name="model">budget.drilldown.report</field>
            <field name="arch" type="xml">
                <form string="Budget Drilldown Report" edit="0" create="0" delete="0">
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="report_type"/>
                            <field name="fiscalyear_id"/>
                        </group>
                        <group>
                            <field name="org_id" attrs="{'invisible': [('report_type', 'not in', ('overview'))]}"/>
                            <field name="sector_id"  attrs="{'invisible': [('report_type', 'not in', ('unit_base'))]}"/>
                            <field name="subsector_id" attrs="{'invisible': [('report_type', 'not in', ('unit_base'))]}"/>
                            <field name="division_id" attrs="{'invisible': [('report_type', 'not in', ('unit_base'))]}"/>
                            <field name="section_id" attrs="{'invisible': [('report_type', 'not in', ('unit_base'))]}"/>
                        </group>
                    </group>
                    <group string="External" attrs="{'invisible': [('line_external_ids', '=', [])]}">
                        <field name="line_external_ids" nolabel="1">
                            <tree>
                                <field name="fiscalyear_id" invisible="1"/>
                                <field name="chart_view"/>
                                <field name="charge_type"/>
                                <field name="released_amount" sum="Total"/>
                                <field name="amount_so_commit" sum="Total"/>
                                <button name="open_so_commit_items" string="SO Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_pr_commit" sum="Total"/>
                                <button name="open_pr_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_po_commit" sum="Total"/>
                                <button name="open_po_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_exp_commit" sum="Total"/>
                                <button name="open_exp_commit_items" string="EX Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_actual" sum="Total"/>
                                <button name="open_actual_items" string="Actual Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_consumed" sum="Total"/>
                                <button name="open_consumed_items" string="Consumed Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_balance" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Internal" attrs="{'invisible': [('line_internal_ids', '=', [])]}">
                        <field name="line_internal_ids" nolabel="1">
                            <tree>
                                <field name="fiscalyear_id" invisible="1"/>
                                <field name="chart_view"/>
                                <field name="charge_type"/>
                                <field name="released_amount" sum="Total"/>
                                <field name="amount_so_commit" sum="Total"/>
                                <button name="open_so_commit_items" string="SO Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_pr_commit" sum="Total"/>
                                <button name="open_pr_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_po_commit" sum="Total"/>
                                <button name="open_po_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_exp_commit" sum="Total"/>
                                <button name="open_exp_commit_items" string="EX Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_actual" sum="Total"/>
                                <button name="open_actual_items" string="Actual Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_consumed" sum="Total"/>
                                <button name="open_consumed_items" string="Consumed Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_balance" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                    <group string="All" attrs="{'invisible': [('line_ids', '=', [])]}">
                        <field name="line_ids" nolabel="1">
                            <tree>
                                <field name="fiscalyear_id" invisible="1"/>
                                <field name="chart_view"/>
                                <field name="charge_type"/>
                                <field name="released_amount" sum="Total"/>
                                <field name="amount_so_commit" sum="Total"/>
                                <button name="open_so_commit_items" string="SO Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_pr_commit" sum="Total"/>
                                <button name="open_pr_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_po_commit" sum="Total"/>
                                <button name="open_po_commit_items" string="PR Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_exp_commit" sum="Total"/>
                                <button name="open_exp_commit_items" string="EX Commit Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_actual" sum="Total"/>
                                <button name="open_actual_items" string="Actual Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_consumed" sum="Total"/>
                                <button name="open_consumed_items" string="Consumed Items" icon="gtk-zoom-in" type="object"/>
                                <field name="amount_balance" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_budget_drilldown_report" model="ir.actions.act_window">
            <field name="name">Budget Drilldown Report</field>
            <field name="res_model">budget.drilldown.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" eval="False"/>
            <field name="target">current</field>
        </record>

    </data>
</openerp>
