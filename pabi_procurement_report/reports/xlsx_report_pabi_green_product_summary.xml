<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_pabi_green_product_summary_view" model="ir.ui.view">
            <field name="name">xlsx.report.pabi.green.product.summary.view</field>
            <field name="model">xlsx.report.pabi.green.product.summary</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='criteria']" position="inside">
                    <group>
                        <field name="org_ids" widget="many2many_tags"/>
                        <field name="category_ids" widget="many2many_tags"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="sel_product"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="org_name" invisible="1"/>
                        <field name="partner_name" invisible="1"/>
                        <field name="category_name" invisible="1"/>
                    </group>
                    <group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="action_xlsx_report_pabi_green_product_summary" model="ir.actions.act_window">
            <field name="name">Green Product Summary</field>
            <field name="res_model">xlsx.report.pabi.green.product.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_xlsx_report_pabi_green_product_summary" name="Green Product Summary" parent="menu_procurement_report" action="action_xlsx_report_pabi_green_product_summary" sequence="100"/>


    </data>
</openerp>
