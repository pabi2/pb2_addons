<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<template id="assets_backend" name="purchase_contract assets" inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<script type="text/javascript" src="/purchase_contract/static/src/js/purchase_contract.js"></script>
			</xpath>
		</template>

		<record model="ir.ui.view" id="purchase_contract_form_view">
			<field name="name">purchase.contract.form</field>
			<field name="model">purchase.contract</field>
			<field name="arch" type="xml">
				<form string="Purchase Contract">
					<header>
						<button
							name="action_button_delete_reversion"
							type="object"
							attrs="{'invisible': ['|',('state','not in', ['generate']),('poc_rev','=', 0)]}"
							string="Delete Reversion"
							confirm="Would you like to Delete Purchase Contract Reversion?"
							groups="base.group_pabi_purchase_contract_user_central,
									base.group_pabi_purchase_contract_user_biotec,
									base.group_pabi_purchase_contract_user_mtec,
									base.group_pabi_purchase_contract_user_nectec,
									base.group_pabi_purchase_contract_user_nanotec,
									base.group_pabi_purchase_contract_user_tmc"/>

						<button
							name="%(action_view_purchase_contract_termination)d"
							string="Termination"
							type="action"
							states="send,close"
							context="{'poc_id': id, 'state':'terminate', 'res_model': 'purchase.contract'}"
							groups="base.group_pabi_purchase_contract_user_central,
									base.group_pabi_purchase_contract_user_biotec,
									base.group_pabi_purchase_contract_user_mtec,
									base.group_pabi_purchase_contract_user_nectec,
									base.group_pabi_purchase_contract_user_nanotec,
									base.group_pabi_purchase_contract_user_tmc"/>

						<button
							name="%(action_view_purchase_contract_reason_cancel)d"
							string="Cancel Code"
							attrs="{'invisible': ['|',('state','not in', ['generate']),('poc_rev','>', 0)]}"
							type="action"
							context="{'poc_id': id, 'state':'cancel_generate'}"
							groups="base.group_pabi_purchase_contract_user_central,
									base.group_pabi_purchase_contract_user_biotec,
									base.group_pabi_purchase_contract_user_mtec,
									base.group_pabi_purchase_contract_user_nectec,
									base.group_pabi_purchase_contract_user_nanotec,
									base.group_pabi_purchase_contract_user_tmc"/>

						<button
							name="action_button_send_doc"
							type="object"
							states="generate"
							string="Send Documents"
							confirm="Would you like to confirm send documents?"
							groups="base.group_pabi_purchase_contract_user_central,
									base.group_pabi_purchase_contract_user_biotec,
									base.group_pabi_purchase_contract_user_mtec,
									base.group_pabi_purchase_contract_user_nectec,
									base.group_pabi_purchase_contract_user_nanotec,
									base.group_pabi_purchase_contract_user_tmc"/>

						<button
							name="action_button_reversion"
							type="object"
							states="send,close"
							string="Add Reversion"
							confirm="Would you like to create Purchase Contract Reversion?"
							groups="base.group_pabi_purchase_contract_user_central,
									base.group_pabi_purchase_contract_user_biotec,
									base.group_pabi_purchase_contract_user_mtec,
									base.group_pabi_purchase_contract_user_nectec,
									base.group_pabi_purchase_contract_user_nanotec,
									base.group_pabi_purchase_contract_user_tmc"/>

						<button name="action_button_reflow" string="Reflow" confirm="Would you like to Reflow Purchase Contract?" type="object" states="send,close" groups="base.group_pabi_purchase_contract_admin,
									base.group_pabi_purchase_contract_law"/>

						<button name="action_button_close" string="Close" confirm="Would you like to Close Contract?" type="object" states="send" groups="base.group_pabi_purchase_contract_user_finance"/>

						<button name="action_button_verify_doc" string="Verify" confirm="Would you like to Verify Contract?" type="object" attrs="{'invisible': ['|',('state','not in', ['close']),('is_verify','=',True)]}" groups="base.group_pabi_purchase_contract_law"/>

						<field name="state" widget="statusbar" statusbar_visible="generate,close,send,terminate"/>
					</header>
					<sheet>
						<group invisible="0" string="Debug">
							<field name="id"/>
							<field name="year" widget="char"/>
							<field name="org_id"/>
							<field name="poc_code"/>
							<field name="poc_rev"/>
							<field name="running"/>
							<!-- <field name="admin_org_groups_id" /> -->
							<field name="requisition_id"/>
							<field name="verify_date"/>
							<field name="send_date"/>
							<field name="is_verify"/>
						</group>

						<br/>
						<!-- ** เลขที่สัญญาไม่สามารถแก้ไขได้ หากกดออกเลขแล้ว ** on 20/09/2016 -->
						<h1>
							<label string="Contract No." for="display_code"/>
							<field name="display_code" class="oe_inline" readonly="1"/>
						</h1>
						<div style='float:right; height:1px; margin:10px'>
							<img src='/pabi_purchase_contract/static/src/img/verified.png' attrs="{'invisible': [('verify_date','=', False)]}" style='margin: -60px 15px 0px 0px;width:200px'></img>
						</div>
						<notebook>
							<page string="Tracking" attrs="{'invisible': [('state','not in', ['close','send','cancel_generate','terminate'])]}">
								<group string="Info" col="4" colspan="2">
									<group colspan="4" col="6">
										<field name="collateral_performance_amt" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" widget="monetary" options="{'currency_field': 'currency_id'}" colspan="6"/>
										<field name="collateral_agreement_amt" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" widget="monetary" options="{'currency_field': 'currency_id'}" colspan="6"/>
										<field name="advance_amt" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" widget="monetary" options="{'currency_field': 'currency_id'}" colspan="6"/>
										<field name="check_final_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="fine_rate" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="contractual_fines" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" widget="monetary" options="{'currency_field': 'currency_id'}" colspan="6"/>
										<field name="warranty" class="oe_inline" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="2"/>
										<field name="warranty_type" nolabel="1" class="oe_inline" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="4"/>
									</group>
								</group>

								<group string="Collateral Agreement" col="4" colspan="2">
									<group colspan="4" col="6">
										<field name="collateral_no" colspan="6" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}"/>
										<field name="collateral_type_id" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}" colspan="6"/>
										<field name="postdating" colspan="3" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}"/>
										<field name="account" colspan="3" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}"/>
										<field name="bank" colspan="3" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}"/>
										<field name="branch" colspan="3" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}"/>
										<field name="contractual_amt" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="collateral_remand_real_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="collateral_received_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="collateral_due_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
										<field name="collateral_remand_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','delete'])]}" colspan="6"/>
									</group>
								</group>
							</page>
							<page string="Contract Info">
								<group string="Info" col="4" colspan="2">
									<group colspan="4" col="6">
										<field name="is_central_purchase" readonly="1" colspan="6"/>
										<field name="contract_type_id" required="1" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}" options="{'create': true, 'create_edit': true, 'm2o_dialog': false,'no_open': true}" colspan="6"/>
										<field name="purchase_type_id" readonly="1" options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}" colspan="6"/>
										<field name="name" colspan="6" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
										<field name="supplier_id" string="Supplier" colspan="6" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
										<field name="currency_id" string="Currency" readonly="1" options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}" colspan="6"/>
										<field name="purchase_method_id" string="Purchase Method" colspan="6" options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}" readonly="1"/>
										<field name="num_of_period" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}" colspan="6"/>
										<field name="contract_amt" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}" colspan="6"/>
									</group>
								</group>
								<hr/>
								<group>
									<group>
										<field name="action_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
										<field name="start_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
										<field name="end_date" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
										<field name="duration_start2end" readonly="1"/>
									</group>
								</group>
								<hr/>
								<label string="Remarks" for="description"/>
								<field name="description" nolabel="1" attrs="{'readonly':[('state','in',['close','cancel_generate','terminate','send','delete'])]}"/>
							</page>
						</notebook>
						<hr/>
						<group>
							<group>
								<field
									name="create_emp_id"
									string="Creator"
									attrs="{'invisible':[('create_emp_id','=',False)],'readonly':[('state','in',['close','cancel_generate','terminate','generate','send','delete'])]}"
									options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}"/>
								<field name="write_emp_id" string="Last user updated" readonly='1' attrs="{'invisible':[('write_emp_id','=',False)]}" options="{'create': false, 'create_edit': false, 'm2o_dialog': false,'no_open': true}"/>
							</group>
							<group>
								<field name="create_date" string="Created Date" readonly='1' attrs="{'invisible':[('create_emp_id','=',False)]}"/>
								<field name="write_date" string="Last Updated" readonly='1' attrs="{'invisible':[('write_emp_id','=',False)]}"/>
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<!-- override the automatically generated list view for purchase_contracts -->
		<record model="ir.ui.view" id="purchase_contract_search_view">
			<field name="name">purchase.contract.seach</field>
			<field name="model">purchase.contract</field>
			<field name="arch" type="xml">
				<search string="Purchase Contract">
					<field name="id" string="All" filter_domain="['|',
		                ('poc_code','like',self),
		                ('name','ilike',self)
						]"/>
					<field name="poc_code"/>
					<field name="name"/>
					<field name="contract_type_id"/>
				</search>
			</field>
		</record>

		<!-- override the automatically generated list view for purchase_contracts -->
		<record model="ir.ui.view" id="purchase_contract_tree_view">
			<field name="name">purchase.contract.tree</field>
			<field name="model">purchase.contract</field>
			<field name="arch" type="xml">
				<tree string="Purchase Contract" colors="red:state == 'cancel_generate' ;red:state == 'terminate' ">
					<field name="display_code"/>
					<field name="contract_type_id"/>
					<field name="name"/>
					<field name="create_emp_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<!-- window action -->
		<!-- The following tag is an action definition for a "window action", that is an action opening a view or a set of views -->
		<record model="ir.actions.act_window" id="purchase_contract_action">
			<field name="name">Purchase Contract</field>
			<field name="res_model">purchase.contract</field>
			<field name="domain"></field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context" eval="{}"/>
		</record>

		<record model="ir.actions.act_window" id="purchase_contract_accept_action">
			<field name="name">Waiting for Accept</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.contract</field>
			<field name="domain">[('state','in', ['send','close']), ('verify_date','=',False)]</field>
			<field name="context">{'verified_view': '1'}</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="purchase_contract_tree_view"/>
		</record>

		<!-- <record id="action_go_to_mycontract" model="ir.actions.act_url"> -->
		<!-- <field name="name">Go to myContract</field> -->
		<!-- <field name="type">ir.actions.act_url</field> -->
		<!-- <field name="target">self</field> -->
		<!-- <field name="url">http://localhost:8069/web?#page=0&amp;limit=80&amp;view_type=list&amp;model=nstda.gnc&amp;menu_id=796&amp;action=818 -->
		<!-- </field> -->
		<!-- </record> -->

		<!-- ############################## Group Roles ############################## -->
		<record model="ir.actions.act_window" id="action_purchase_contract_group_roles">
			<field name="name">Access Rights</field>
			<field name="res_model">res.groups</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('category_id.description','=','purchase_contract')]
			</field>
			<field name="context" eval="{'mode_view': 't'}"/>
		</record>

		<!-- Type -->

		<record model="ir.ui.view" id="view_purchase_contract_type_form">
			<field name="name">purchase.contract.type.form</field>
			<field name="model">purchase.contract.type</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Type">
					<group>
						<field name="name" string="Name"/>
					</group>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_purchase_contract_type_tree">
			<field name="name">purchase.contract.type.tree</field>
			<field name="model">purchase.contract.type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Type">
					<field name="name" string="Name"/>
				</tree>
			</field>
		</record>

		<!-- top level menu: no parent -->
		<menuitem id="main_purchase_contract_menu" name="Purchase Contract"/>
		<menuitem id="purchase_contract_sub_menu" name="Contract Management" parent="main_purchase_contract_menu" sequence="1"/>
		<menuitem id="purchase_contract_menu" name="Purchase Contract" parent="purchase_contract_sub_menu" action="purchase_contract_action" sequence="1"/>
		<menuitem id="purchase_contract_accept_menu" name="Waiting for Accept" parent="purchase_contract_sub_menu" action="purchase_contract_accept_action" sequence="1"/>
		<!-- <menuitem action="action_go_to_mycontract" name="Go to myContract" -->
		<!-- id="menu_go_to_mycontract" parent="purchase_contract_sub_menu" groups="base.group_purchase_contract_law" -->
		<!-- sequence="1" /> -->
		<!-- <menuitem id="purchase_contract_report_view_menu" name="รายงานทะเบียนคุม" parent="purchase_contract_sub_menu" action="purchase_contract_report_view_action" sequence="2"/> -->
		<menuitem id="purchase_contract_conf_menu" name="Configuration" parent="purchase_contract_sub_menu" sequence="3"/>
		<menuitem name="Accessing" id="menu_nstda_gnc_group_roles" parent="purchase_contract_conf_menu" sequence="99" action="action_purchase_contract_group_roles"/>

	</data>
</openerp>
