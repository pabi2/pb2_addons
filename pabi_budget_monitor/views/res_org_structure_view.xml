                                            <field name="amount_actual"/>
                                            <field name="amount_consumed"/>
                                            <field name="amount_balance"/>
                                        </tree>
                                    </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

