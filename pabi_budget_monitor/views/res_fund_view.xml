<?xml version="1.0" ?>
<openerp>
    <data>

        # Fund
        <record id="view_res_fund_form" model="ir.ui.view">
            <field name="name">view.res.fund.form</field>
            <field name="model">res.fund</field>
            <field name="inherit_id" ref="pabi_base.view_res_fund_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Fund / Project Monitor">
                        <field name="monitor_project_ids">
                            <tree string="Monitor" editable="bottom">
                                <field name="fund_id" invisible="1"/>
                                <field name="fiscalyear_id"/>
                                <field name="charge_type"/>
                                <field name="project_id"/>
                                <field name="planned_amount"/>
                                <field name="released_amount"/>
                                <field name="amount_pr_commit"/>
                                <field name="amount_po_commit"/>
                                <field name="amount_exp_commit"/>
                                <field name="amount_actual"/>
                                <field name="amount_consumed"/>
                                <field name="amount_balance"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Fund / Section Monitor">
                        <field name="monitor_section_ids">
                            <tree string="Monitor" editable="bottom">
                                <field name="fund_id" invisible="1"/>
                                <field name="fiscalyear_id"/>
                                <field name="charge_type"/>
                                <field name="section_id"/>
                                <field name="planned_amount"/>
                                <field name="released_amount"/>
                                <field name="amount_pr_commit"/>
                                <field name="amount_po_commit"/>
                                <field name="amount_exp_commit"/>
                                <field name="amount_actual"/>
                                <field name="amount_consumed"/>
                                <field name="amount_balance"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Fund / Invest Asset Monitor">
                        <field name="monitor_invest_asset_ids">
                            <tree string="Monitor" editable="bottom">
                                <field name="fund_id" invisible="1"/>
                                <field name="fiscalyear_id"/>
                                <field name="charge_type"/>
                                <field name="invest_asset_id"/>
                                <field name="planned_amount"/>
                                <field name="released_amount"/>
                                <field name="amount_pr_commit"/>
                                <field name="amount_po_commit"/>
                                <field name="amount_exp_commit"/>
                                <field name="amount_actual"/>
                                <field name="amount_consumed"/>
                                <field name="amount_balance"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Fund / Invest Construction Phase Monitor">
                        <field name="monitor_invest_construction_phase_ids">
                            <tree string="Monitor" editable="bottom">
                                <field name="fund_id" invisible="1"/>
                                <field name="fiscalyear_id"/>
                                <field name="charge_type"/>
                                <field name="invest_construction_phase_id"/>
                                <field name="planned_amount"/>
                                <field name="released_amount"/>
                                <field name="amount_pr_commit"/>
                                <field name="amount_po_commit"/>
                                <field name="amount_exp_commit"/>
                                <field name="amount_actual"/>
                                <field name="amount_consumed"/>
                                <field name="amount_balance"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Fund / Personnel Costcenter Monitor">
                        <field name="monitor_personnel_costcenter_ids">
                            <tree string="Monitor" editable="bottom">
                                <field name="fund_id" invisible="1"/>
                                <field name="fiscalyear_id"/>
                                <field name="charge_type"/>
                                <field name="personnel_costcenter_id"/>
                                <field name="planned_amount"/>
                                <field name="released_amount"/>
                                <field name="amount_pr_commit"/>
                                <field name="amount_po_commit"/>
                                <field name="amount_exp_commit"/>
                                <field name="amount_actual"/>
                                <field name="amount_consumed"/>
                                <field name="amount_balance"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
